{
  "name": "maa-common",
  "type": "module",
  "scripts": {
    "run": "esbuild packages/tui/src/index.tsx --outdir=dist/scripts --bundle --platform=node --format=esm --sourcemap && node dist/scripts/index.js",
    "watch": "esbuild packages/tui/src/index.tsx --outdir=dist/scripts --bundle --platform=node --format=esm --watch --sourcemap",
    "build": "esbuild packages/tui/src/index.ts --outdir=dist/scripts --bundle --platform=node --minify",
    "package": "pkg . -C GZip"
  },
  "bin": "dist/scripts/index.js",
  "pkg": {
    "scripts": "dist/scripts/index.js",
    "assets": "dist/build/**/*",
    "targets": [
      "node18-macos-x64",
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@tsconfig/node20": "^20.1.0",
    "esbuild": "^0.18.14",
    "pkg": "^5.8.1"
  }
}
